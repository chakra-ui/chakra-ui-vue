    "@nuxtjs/google-analytics": "^2.4.0",
    "@nuxtjs/now-builder": "^0.17.1",
    "@nuxtjs/pwa": "^3.0.0-0",
    "@vue-a11y/skip-to": "^2.0.1",
    "copy-to-clipboard": "^3.3.1",
    "core-js": "^3.15.1",
